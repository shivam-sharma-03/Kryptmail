{
  "manifest_version": 3,
  "name": "Email Cipher",
  "version": "1.0",
  "description": "Encrypt and Decrypt emails using Caesar Cipher",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*", "https://outlook.live.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
